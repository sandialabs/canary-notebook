#!/bin/bash

set -e

export CANARY_CACHE_DIR=/dev/null

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

cd $SCRIPT_DIR/..

echo ""
echo "===================="
echo "ruff: formatting src"
echo "===================="
ruff format src

echo ""
echo "=================="
echo "ruff: checking src"
echo "=================="
ruff check --fix src

echo ""
echo "================="
echo "mpy: checking src"
echo "================="
mypy src
